<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dam3.imc.EscribirFichero"
    android:orientation="vertical"
    android:background="@android:color/darker_gray">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        tools:text="@string/hello_blank_fragment"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextNombre" />

    <TextView
        android:text="Apellidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewApellidos"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextApellidos" />

    <Button
        android:text="ESCRIBIR EN FICHERO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEscribirEnFichero"
        tools:text="@string/botonEscribir" />

    <Button
        android:text="Escribir en BDD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBDD" />

</LinearLayout>
